.allfilter .categoryfilter text,
.allfilter .businessfilter text {
	font-size: 25px;
	display: inline-block;
}
.allfilter .categoryfilter text {
	height: 53px;
	line-height: 53px;
}
.allfilter .categoryfilter {
	background-color: rgb(243, 243, 243);
	text-align: center;
	width: 110px;
}
.allfilter .businessfilter {
	height: 45px;
	width: 180px;
	padding: 4px;
	background-color: rgb(243, 243, 243);
}
.allfilter .businessfilter .business {
	width: 45px;
	height: 45px;
	border: 1rpx solid black;
	background-color: white;
	display: inline-block;
	text-align: center;
}
.allfilter .businessfilter .business text {
	font-size: 12px;
}
/* .allfilter .businessfilter .business image {
