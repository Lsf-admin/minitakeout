/* pages/life/life.wxss */
.toubu {
	width: 100%;
	height: 160px;
	position: relative;
}
.toubu image {
	width: 100%;
	height: 160px;
}
.toubu Head {
	position: relative;	
	top: -120px;
}
/* 派/好友 */
.friend {
	background-color: rgb(243, 243, 243);
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.friend text {
	display: inline-block;
	height: 36px;
	width: 40%;
	font-size: 18px;
	line-height: 36px;
	text-align: center;
}
.friend .pai {
	border-right: 1rpx solid black;
	width: 60%;
	font-size: 25px;
	padding-left: 10px;
	text-align: left;
}
/* 反馈区域 */
.onwerinformation {
	height: 45px;
	/* background-color: pink; */
	display: flex;
	justify-content: space-between;
	padding-top: 10px;
}
.onwerinformation .tp {
	width: 45px;
	height: 45px;
	padding-left: 5px;
	/* background-color: plum; */
}
.onwerinformation image {
	width: 45px;
	height: 45px;
}
.onwerinformation .wz {
	height: 45px;
	width: 270px;
	/* background-color: red; */
	display: flex;
	justify-content: space-between;
	padding-right: 20px;
}
.onwerinformation text {
	display: inline-block;
	height: 45px;
	line-height: 45px;
	/* background-color: chartreuse; */
}
.onwerinformation .wz .smallwz {
	font-size: 12px;
}
/* 轮播图 */
.lbt {
	text-align: center;
}
.lbt swiper {
	height: 165px;
	/* background-color: pink; */
}
.lbt swiper image {
	width: 90%;
	height: 100%;
}
.lbt swiper .active {
	width: 70%;
	height: 80%;
	margin-top: 18px;
}
/* 输入框 */
.srk {
	height: 110px;
	/* background-color: seagreen; */
}
.srk textarea{
	width: 60%;
	height: 100px;
	margin: 5px auto;
	padding: 5px;
	font-size: 12px;
	border: 1rpx solid black;
	/* background-color: seashell; */
}
.db {
	display: flex;
	justify-content: space-between;
	padding: 10px 0;
}
.fzq text {
	font-size: 12px;
}
.fzh .dzpl text {
	font-size: 12px;
	display: inline-block;
	line-height: 20px;
	height: 20px;
}
.fzh {
	display: flex;
	justify-content: space-between;
}
.fzh .dzpl {
	border: 1rpx solid black;
	height: 24px;
	padding: 0px 5px;
	border-radius: 3px;
	margin: 15px 30px 0 0;
}
.fzh .ddd {
	height: 24px;
	padding: 0px 5px;
	border-radius: 3px;
	margin: 15px 10px 0 0;
}
.jh {
	background-color: rgb(243, 243, 243);
	height: 35px;
	font-size: 25px;
	line-height: 35px;
	text-align: center;
}
