}

.rice .rotation {
	text-align: center;
}
.rice .ricenames text{
	font-size: 16px;
	display: inline-block;
	padding: 0 15px;
}
.rice .ricenames {
	background-color: rgb(243, 243, 243);
	padding: 10px 0;
	margin: 10px 0 0 0;
}
.rice .rotation .shop {
	/* background-color: hotpink; */
	font-size: 20px;
	text-align: center;
	width: 300px;
	margin: 0 auto;
	margin-top: 10px;
	border-bottom: 1rpx solid black;
}
.rice .rotation .shop .pay {
	border: 1rpx solid black;
	width: 180px;
	margin: 0 auto;
}
.rice .rotation .shop .shopname {
	padding: 10px 0;
}
.rotation swiper {
	height: 157px;
	/* background-color: pink; */
}
.rotation swiper image {
	width: 90%;
	height: 100%;
}
.rotation swiper .active {
	width: 70%;
	height: 80%;
	margin-top: 18px;
}
/* 图片上的勾 */
.rotation swiper .yes {
	position: absolute;
	top: 0;
	right: 15px;
	z-index: 10;
	height: 30px;
	width: 30px;
}
.rotation swiper .yes image {
	width: 30px;
	height: 30px;
} 
