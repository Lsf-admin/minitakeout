.allfilter .businessfilter text {
	font-size: 25px;
	display: inline-block;
	margin-top: 4px;
}
.allfilter .categoryfilter .filter {
	font-size: 12px;
	line-height: 33px;
}
.allfilter .categoryfilter {
	background-color: rgb(243, 243, 243);
	width: 150px;
}
.allfilter .businessfilter {
	height: 45px;
