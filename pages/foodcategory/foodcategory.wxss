.allfilter .categoryfilter text,
.allfilter .businessfilter text {
	font-size: 25px;
	display: inline-block;
	margin-top: 0;
}
.allfilter .categoryfilter text {
	margin-top: 10px;
}
.allfilter .categoryfilter .filter {
	font-size: 12px;
	line-height: 33px;
}
.allfilter .categoryfilter {
	background-color: rgb(243, 243, 243);
	width: 150px;
}
.allfilter .businessfilter {
	height: 45px;
	width: 150px;
	padding: 4px;
	background-color: rgb(243, 243, 243);
}
.allfilter .businessfilter .business {
	width: 45px;
	height: 45px;
	border: "1rpx solid black";
	background-color: white;
	display: inline-block;
	text-align: center;
}
.allfilter .businessfilter .business text {
	font-size: 12px;
}
.allfilter .businessfilter .business image {
	width: 100%;
	height: 100%;
}
.allfilter .businessfilter .businesstit {
	background-color: rgb(243, 243, 243);
	margin-left: 50px;
}
.allfilter {
	display: flex;
	flex-direction: row;
	justify-content:space-between;
	margin-top: 15px;
	padding: 0 10px;
}
.rice .rotation {
	text-align: center;
}
.rice .ricenames text{
	font-size: 25px;
	display: inline-block;
	padding: 0 15px;
}
.rice .ricenames {
	background-color: rgb(243, 243, 243);
	padding: 10px 0;
	margin: 10px 0;
}
.rice .rotation .ricename {
	/* background-color: hotpink; */
	font-size: 20px;
	margin-top: 30px;
}
.next {
	/* background-color: hotpink; */
	margin-top: 50px;
	text-align: center;
	font-size: 20px;
	height: 35px;
	line-height: 35px;
	background-color: rgb(243, 243, 243);
}
.rotation swiper {
	height: 180px;
	/* background-color: pink; */
}
.rotation swiper image {
	width: 90%;
	height: 100%;
}
.rotation swiper .active {
	width: 70%;
	height: 80%;
	margin-top: 18px;
}
.rice .ricenames .now {
	font-size: 28px;
	font-weight: 700;
}
